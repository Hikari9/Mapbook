<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mapbook.ui.Register" >

    <TextView
        android:id="@+id/register_header"
        style="@style/wrap"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="none"
        android:padding="20dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/register_username"
        style="@style/long_textbox"
        android:layout_below="@+id/register_header"
        android:hint="Username" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/register_password"
        style="@style/long_textbox"
        android:layout_below="@+id/register_username"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_confirm_password"
        style="@style/long_textbox"
        android:layout_below="@+id/register_password"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_email"
        style="@style/long_textbox"
        android:layout_below="@+id/register_confirm_password"
        android:hint="Email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/register_signup"
        style="@style/long_button"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="10sp"
        android:text="Sign Up" />

    <Button
        android:id="@+id/register_signup_facebook"
        style="@style/long_button"
        android:layout_below="@+id/register_signup"
        android:background="#00F"
        android:text="Sign Up With Facebook" />

</RelativeLayout>